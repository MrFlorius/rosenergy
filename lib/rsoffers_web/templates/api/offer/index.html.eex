<h1>Listing Offers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Solution</th>
      <th>Outcome</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for offer <- @offers do %>
    <tr>
      <td><%= offer.name %></td>
      <td><%= offer.description %></td>
      <td><%= offer.solution %></td>
      <td><%= offer.outcome %></td>

      <td>
        <span><%= link "Show", to: Routes.api_offer_path(@conn, :show, offer) %></span>
        <span><%= link "Edit", to: Routes.api_offer_path(@conn, :edit, offer) %></span>
        <span><%= link "Delete", to: Routes.api_offer_path(@conn, :delete, offer), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Offer", to: Routes.api_offer_path(@conn, :new) %></span>
